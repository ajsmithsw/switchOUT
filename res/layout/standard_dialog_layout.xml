<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/standard_dialog_bg"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/standard_dialog_icon"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:src="@drawable/game_icon"
        android:layout_marginTop="10dp"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/standard_dialog_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="dialog title"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowRadius="25"
        android:shadowDx="2"
        android:shadowDy="2"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/standard_dialog_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="dialog message, dialog message, dialog message."
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowRadius="25"
        android:shadowDx="2"
        android:shadowDy="2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <Button
                android:id="@+id/standard_dialog_button1"
                android:background="@drawable/dialog_button_bg"
                android:text="cancel"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="0dp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/black"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:clickable="true"
                />
            <Button
                android:id="@+id/standard_dialog_button2"
                android:background="@drawable/dialog_button_bg"
                android:text="OK!"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@android:color/black"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_toRightOf="@+id/standard_dialog_button1"
                android:layout_toEndOf="@+id/standard_dialog_button1"
                android:clickable="true"
                />

        </RelativeLayout>

</LinearLayout>